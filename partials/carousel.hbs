{{!-- TODO: Make display of non-primary tag in 'post-meta' optional --}}
<div class="carousel-container carousel owl gh-inner">
    {{#foreach posts}}
        <div class="carousel-item">
            <article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">
                <figure class="post-media">
                    <div class="u-placeholder square">
                        <a class="post-image-link" href="{{url}}">
                            {{!-- Display the primary tag as a "sticker" on the image --}}
                            {{#primary_tag}}
                                <span class="post-media-tag post-tag-{{slug}}">{{name}}</span>
                            {{/primary_tag}}
                            {{!-- Display the feature image --}}
                            {{#if feature_image}}
                                <img class="post-image carousel-item-image u-object-fit" src="{{img_url feature_image size=" m"}}" alt="{{title}}">
                            {{/if}}
                        </a>
                    </div>
                </figure>

                <header class="post-header">
                    {{!-- Display post title --}}
                    <h2 class="post-title">
                        <a class="post-title-link" href="{{url}}">{{title}}</a>
                    </h2>
                    <div class="post-meta">
                        {{!-- Display post date --}}
                        <span class="post-meta-item post-meta-date">
                            <time datetime="{{date format=" YYYY-MM-DD"}}">{{date published_at format="DD MMM YYYY"}}</time>
                        </span>
                        {{!-- Display reading time --}}
                        {{#if reading_time}}
                            <span class="post-meta-item post-meta-length">{{reading_time}}</span>
                        {{/if}}
                    </div>
                    {{!-- Display (truncated) post excerpt --}}
                    {{#if excerpt}}
                        <span class="carousel-post-excerpt truncate-this-text">{{excerpt}}</span>
                    {{/if}}
                </header>
            </article>
        </div>
    {{/foreach}}
</div>