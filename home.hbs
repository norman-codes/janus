{{!< default}}

<main id="home-main">
    {{!-- Featured posts section --}}
    <section class="home-featured gh-outer">
        {{#if @custom.show_featured_posts}}
            <h2 class="gh-inner">Featured Posts</h2>
            {{#get "posts" filter="featured:true" limit="all" include="tags"}}
                {{> "carousel"}}
            {{/get}}
        {{/if}}
    </section>

    {{!-- Latest blog and podcast section --}}
    <section class="home-latest gh-outer">
        <div class="gh-inner">
            <h2>Latest Content</h2>
            <div class="latest-content">
                <div class="latest-blog">
                    <h2>Latest Blog Post</h2>
                    <!-- Latest blog posts will go here -->
                </div>
                <div class="latest-podcasts">
                    <h2>Latest Podcast</h2>
                    <!-- Latest podcast episodes will go here -->
                </div>
            </div>
        </div>
    </section>

    {{!-- Exploration by category (i.e. tag) section --}}
    <section class="home-categories gh-outer">
        <div class="gh-inner">
            <h2>Explore by Category</h2>
            <div class="gh-inner">
                    {{!-- Categories in "topic-minimal" style will go here --}}
            </div>
        </div>
    </section>
</main>